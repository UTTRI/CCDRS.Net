<!DOCTYPE html>

<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>@ViewBag.Title</title>
    </head>

    <body>
        <hr class="border border-primary" />
        <div style="margin-bottom:30px;">
            <h4> Directions </h4>
            @foreach (var item in Model.DirectionList)
            {
                <div class="form-check" sstyle="margin-bottom:50px;">
                    <input class="form-check-input" type="checkbox" name="directionCountSelect" value="@item.Abbreviation" id="@item.Id" checked="true">
                    <label class="form-check-label" for="@item.Id">
                        @item.Compass
                    </label>
                </div>
            }
        </div>
        <hr class="border border-primary" />
       
        <div style="margin-bottom:30px">
            <h4> Time Coverage </h4>
            <p>Counts are recorded in 15-minute ENDING times. For 9:00 a.m. to 3:00 p.m., enter '901' and '1500'.</p>
            <div style ="margin-bottom:10px" >
                <div><label>Start Time</label></div>
                <input type="number" style="background-color:#434857; border:1px solid #434857; border-radius:4px; color:#ffffff;" min="500" name="startTime" value="600">
            </div>
            <div>
                <div><label>End Time</label></div>
                <input type="number" style="background-color:#434857; border:1px solid #434857; border-radius:4px; color:#ffffff;" max="2400" name="endTime" value="2400">
            </div>
        </div>
        <hr class="border border-primary" />

        <div style="margin-bottom:30px">
            <h4>Report Traffic Volume by</h4>
            <input type="radio" name="trafficVolumeRadioButtonSelect" value="1" checked="true" />
                <label style="margin-right:10px">Total Volume</label>
            <input type="radio" name="trafficVolumeRadioButtonSelect" value="2" />
                <label style="margin-right:10px">15 minute interval</label> 
        </div>
        <hr class="border border-primary" />


        <div style="margin-bottom:30px">
            <h4> Vehicle Count </h4>
            @foreach (var item in Model.VehicleCountTypeList)
            {
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="individualCategorySelect" value=@item.VehicleCountTypeId id="flexCheckDefault" checked="true">
                    <label class="form-check-label" for="flexCheckDefault">
                        @item.Description - @item.VehicleName
                    </label>
                </div>
            }
        </div>
        <hr class="border border-primary" />

        <div style="margin-bottom:30px">
            <h4> Person Count</h4>
            @foreach (var item in Model.PersonCountTypeList)
            {
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="individualCategorySelect" value=@item.VehicleCountTypeId id="flexCheckDefault">
                    <label class="form-check-label" for="flexCheckDefault">
                        @item.Description - @item.VehicleName
                    </label>
                </div>
            }
        </div>
        <hr class="border border-primary" />
        
        <div style="margin-bottom:30px">
            <h3> Individual Categories </h3>
            @foreach (var item in Model.IndividualCategoriesList)
            {
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="individualCategorySelect" value=@item.VehicleCountTypeId id="flexCheckDefault">
                    <label class="form-check-label" for="flexCheckDefault">
                        @item.Description
                    </label>
                </div>
            }
        </div>

    <hr class="border border-primary" />
    <input type="submit" class="btn btn-primary" value="Submit" asp-page-handler="Submit" />

    </body>
</html>

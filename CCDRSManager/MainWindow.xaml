<Window x:Class="CCDRSManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CCDRSManager"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <DockPanel Grid.Column="1">
                <Menu>
                    <Separator />
                    <MenuItem Header="Vehicle">
                        <MenuItem Header="_Edit..." Click="EditVehicle" />
                    </MenuItem>
                    <Separator />
                    <MenuItem Header="Survey">
                        <MenuItem Header="_Insert..." />
                    </MenuItem>
                </Menu>
            </DockPanel>

            <Button Click="RunWizard">Run CCDRS Wizard</Button>
        </StackPanel>
        
    </Grid>
</Window>

<Window x:Class="CCDRSManager.VehicleDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CCDRSManager"
        mc:Ignorable="d"
        Title="VehicleDialog" Height="450" Width="800">
    <Window.DataContext>
        <local:VehicleViewModel />
    </Window.DataContext>
    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <DataGrid ItemsSource="{Binding VehicleCountTypes}"
         AutoGenerateColumns="False"
         Grid.Row="0" Grid.Column="0" CellEditEnding="UpdateVehicleCountType">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding Id}" IsReadOnly="True" />
                <DataGridTextColumn Header="Description" Binding="{Binding Description}" IsReadOnly="False" />
                <DataGridTextColumn Header="Occupancy" Binding="{Binding Occupancy}" IsReadOnly="False" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
